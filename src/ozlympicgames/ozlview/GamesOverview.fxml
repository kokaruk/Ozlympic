<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ozlympicgames.ozlcontroller.GamesOverviewController">

    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <AnchorPane prefHeight="100.0" prefWidth="800.0">
                <children>
                    <Label layoutX="14.0" layoutY="14.0" prefHeight="27.0" prefWidth="190.0" text="Active Game:">
                        <font>
                            <Font size="24.0" />
                        </font>
                    </Label>
                    <Label fx:id="activeGame" layoutX="14.0" layoutY="44.0" text="Label" textAlignment="RIGHT" />
                    <Button fx:id="addReferee" disable="true" layoutX="509.0" layoutY="25.0" minWidth="80.0" mnemonicParsing="false" text="Add referee" />
                    <Button fx:id="addPlayers" disable="true" layoutX="607.0" layoutY="25.0" minWidth="80.0" mnemonicParsing="false" text="Add players" />
                    <Button fx:id="gamePlay" disable="true" layoutX="706.0" layoutY="25.0" minWidth="80.0" mnemonicParsing="false" text="Play" />
                </children>
            </AnchorPane>
            <AnchorPane prefWidth="800.0" VBox.vgrow="ALWAYS">
                <SplitPane dividerPositions="0.5" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
                    <items>
                        <AnchorPane>
                            <children>
                                <TableView fx:id="gamesTable" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <columns>
                                        <TableColumn fx:id="gameIdColumn" maxWidth="70.0" minWidth="70.0" resizable="false" text="Game ID" />
                                        <TableColumn fx:id="gameSportColumn" maxWidth="-1.0" minWidth="100.0" prefWidth="100.0" resizable="false" text="Sport" />
                                        <TableColumn fx:id="timeRunColumn" editable="false" minWidth="130.0" prefWidth="150.0" text="Date Run" />
                                    </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>

                                </TableView>
                            </children>
                        </AnchorPane>
                        <AnchorPane>
                            <children>
                                <Label layoutX="14.0" layoutY="6.0" text="Game Details" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="10.0">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                                <GridPane layoutX="50.0" layoutY="59.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="45.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Referee Name" />
                                        <Label text="Assigned Athletes" GridPane.rowIndex="1" />
                                        <Label text="Winner" GridPane.rowIndex="2" />
                                        <Label text="Best time" GridPane.rowIndex="3" />
                                        <Label fx:id="refName" text="Label" GridPane.columnIndex="1" />
                                        <Label fx:id="gameAthletes" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <Label fx:id="gameWinner" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                        <Label fx:id="winnerTime" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    </children>
                                </GridPane>
                                <ButtonBar layoutX="141.0" layoutY="244.0" prefHeight="40.0" AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="5.0">
                                    <buttons>
                                        <Button fx:id="activateGame" disable="true" minWidth="150.0" mnemonicParsing="false" onAction="#handleActivate" prefWidth="150" text="Activate" />
                                        <Button disable="true" minWidth="150.0" mnemonicParsing="false" prefWidth="150" text="New Game..." />
                                    </buttons>
                                </ButtonBar>
                            </children>
                        </AnchorPane>
                    </items>
                </SplitPane>
            </AnchorPane>
        </children>
    </VBox>
</AnchorPane>
